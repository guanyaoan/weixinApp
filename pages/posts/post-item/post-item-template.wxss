.post-container{
    display: flex;
    flex-direction:column;
    margin-top:20rpx;
    margin-bottom:40rpx;
    background-color:#fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom:5rpx;
}

.postAuthor{
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    vertical-align: middle;
}
.postImage{
    width:100%;
    height:340rpx;
    margin-bottom:10px;
}
.postContent{
    font-size: 28rpx;
    color:#666;
    font-family:"宋体";
    font-weight: normal;
    margin-bottom:20rpx;
    margin-left:20rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
}
.post-author-date{
    margin:10rpx 0 20rpx 10rpx;
}
.postDate{
    margin-left:20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}
.postTitle{
    font-size: 34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom:10px;
    margin-left:10px;
}
.postLike{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left:10px;
}
.posticon{
    height: 16px;
    width: 16px;
    vertical-align: middle;
    margin-right: 8px;
}
.postfont{
    vertical-align: middle;
    margin-right: 20px;
}